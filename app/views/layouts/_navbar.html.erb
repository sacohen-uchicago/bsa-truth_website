<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .navbar-custom {
            background-color: #343a40; /* Dark shade */
            padding-left: 50px;
        }
        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #f8f9fa; /* Light text */
        }
        .navbar-custom .nav-link:hover,
        .navbar-custom .nav-link:focus {
            color: #adb5bd; /* Lighter text on hover/focus */
        }
        .navbar-custom .nav-link.active {
            color: #e9ecef; /* Active state color */
            background-color: #495057; /* Darker background for active state */
        }
        .navbar-custom .dropdown-menu {
            background-color: #343a40; /* Dark shade */
        }
        .navbar-custom .dropdown-item {
            color: #f8f9fa; /* Light text */
        }
        .navbar-custom .dropdown-item:hover,
        .navbar-custom .dropdown-item:focus {
            color: #adb5bd; /* Lighter text on hover/focus */
            background-color: #495057; /* Darker background on hover/focus */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand">BSA Truth LLC</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to 'Home', home_path, class: 'nav-link active' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Founders', founders_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Contact', contact_path, class: 'nav-link' %>
                </li>
                <!-- Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/posts_2024_january">January</a>
                        <!-- Other dropdown items can be added here -->
                    </div>
                <!-- Other nav items above... -->

<!-- Other nav items above... -->

<li class="nav-item">
  <% if user_signed_in? %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
  <% else %>
    <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
  <% end %>
</li>



            </ul>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
